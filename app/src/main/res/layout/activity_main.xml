<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/layout_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layout Design Question 1.1"/>

    <Button
        android:id="@+id/layout_design1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Layout Design Question 1.2"/>
    <Button
        android:id="@+id/layout_design2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up page"/>
    <Button
        android:id="@+id/recyclerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recycler View with pagination"/>
    <Button
        android:id="@+id/recyclerBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News Page"/>


</LinearLayout>